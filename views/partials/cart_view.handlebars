<!-- Cart page , for viewing the users current order and make adjustments as needed. -->
<table class="table table-sm table-hover table-striped table-dark text-center m-auto">

  <thead class="thead-light">
      <tr>
          <th id="name-row-head" title="Name of Item" scope="col">Item</th>
          <th id="cost-row-head" title="Cost of item in US$" scope="col"><i class="fas fa-dollar-sign"></i> Cost</th>
          <th id="update-row-head" title="Quantity ordering of Item" scope="col"><span class="d-none d-xl-inline">Cart </span>Quantity</th>
          <th id="delete-row-head" title="Remove item from cart by clicking the X" scope="col">Remove<span class="d-none d-xl-inline"> From Cart <i class="fas fa-trash"></i></span></th>
      </tr>
  </thead>
  
  <tbody>
      {{#if cart}}
          {{#each cart}}
              <tr>
                  {{#with product}}
                      <th class="name-row" scope="row" title="Item {{name}}: {{description}}">{{name}}</th>
                  {{/with}}
                  <td class="cost-row" title="{{dataValues.product.name}} ${{dataValues.each_price}} "><i class="fas fa-dollar-sign"></i> {{dataValues.each_price}}</td>
                  <td class="update-row" title="Update Cart Quantity">
                      <div class="input-group">
                          <div class="input-group-append">
                              <button class="update-quantity badge-dark badge badge-sm" type="button"><i class="fas fa-cog"></i></button>
                          </div>
                          <input type="number" class="form-control form-control-sm p-0 m-0 mx-auto text-center" name="quantity" min="1" value="{{dataValues.num}}" >
                      </div>
                  </td>
                  <td class="delete-row" title="Remove item from Cart">
                      <div>
                          <button type="button" class="delete-item badge badge-sm badge-danger px-lg-2 mr-3 mr-md-5" data-id="{{dataValues.productId}}" value="{{dataValues.productId}}"><i class="fas fa-trash"></i></button>
                      </div>
                  </td> 
              </tr>
          {{/each}}               
      {{else}}
      <tr>
          <th scope="row" colspan="4" class="text-danger text-dark bg-warning py-3">Oh it looks like there is no items in your cart! Add items to cart to make a purchase.<i class="fas fa-cart-plus"></i></th>
      </tr>
      {{/if}}
  </tbody>    
</table>
<caption><i class="fas fa-arrow-circle-up"></i> Your Shopping Cart <i class="fas fa-shopping-cart"></i></caption>