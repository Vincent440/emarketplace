{{!-- Top navigation bar for all of the files. --}}
<nav id="mainTopNavbar" class="navbar fixed-top navbar-expand-md navbar-dark bg-dark p-2">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavBar">
        <span class="navbar-toggler-icon"></span>
    </button>

    <a class="navbar-brand px-0 mr-0" href="/">Market Place</a>

    <div class="collapse navbar-collapse" id="mainNavBar">

        <ul class="navbar-nav mr-auto mt-2">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home</a>
            </li>
            {{#if user}}
                <li class="nav-item">
                    <a class="nav-link px-0" href="/account">Account</a>
                </li>
            {{/if}}
            {{!-- if statement to not display the category button drop-down if nothing to display --}}
            {{#if category}}
                <li class="nav-item dropdown">
                    <a id="navbarDropdown" class="nav-link dropdown-toggle" role="button" data-toggle="dropdown">Categories</a>
                    <div class="dropdown-menu mb-2">
                        <a class="dropdown-item disabled" href="#">Select A Category</a>
                        {{#each category}}
                            <a class="dropdown-item" href="/category/{{dataValues.id}}" data-toggle="tooltip" title="{{dataValues.description}}">{{dataValues.name}}</a>
                        {{/each}}
                    </div>
                </li>
            {{/if}}
        </ul>
        {{!-- Search form that gets hidden in dropdown at MD breakpoint --}}
        <form class="navbar-form m-0 p-0 navbar-right">
            <div class="input-group">
                <div class="input-group-btn">
                    <button id="navbar-search-btn" class="btn btn-primary px-1" data-toggle="tooltip" title="Search Product Name/Description" type="submit"><i class="fas fa-search"></i></button>
                </div>
                <input id="navbar-search-input" class="form-control"  data-toggle="tooltip" title="Search Product Name/Description" type="text" placeholder="Search">
            </div>
        </form>
    </div>
    <div class="my-0 px-0 btn-group mx-0" role="group"> 
        {{#if user}}
            {{!-- IF user is logged in display CART/LOGOUT  --}}
                <button id="navbar-view-cart" class="btn btn-primary my-2 px-0 pr-1" type="button" data-toggle="tooltip" title="View Cart">
                    <a href="/cart" class="text-white text-decoration-none" >
                    <span id="navbar-cart-amount" class="badge badge-light"></span>
                    Cart<i class="fas fa-shopping-cart"></i>
                    </a>
                </button>
                <button type="button" class="btn btn-primary my-2 px-0" data-toggle="modal" data-target="#logout-modal" data-toggle="tooltip" title="Log Out">Log-Out <i class="fas fa-sign-out-alt"></i></button>
            {{else}}
            {{!-- ELSE user is not logged in , display login and sign up button --}}
                <a class="btn btn-primary my-2" href="/login">Log-In! <i class="fas fa-sign-in-alt"> </i> </a>
                <a class="btn btn-primary my-2" href="/register">Sign Up! <i class="fas fa-user-plus"></i></a>
        {{/if}}
    </div>
</nav>