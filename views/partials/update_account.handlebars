<div class="col-10 my-4 py-2 px-1 align-items-center m-auto">

    <form class="shadow p-sm-2 p-md-4 mb-5 bg-white rounded">

      <div class="form-row">

        <div class="form-group col-md-6">
          <label for="update-name">Update-Full Name</label>
          <input type="text" class="form-control" id="update-name" placeholder="Full Name: John Doe" autocomplete="name">
        </div>

        <div class="form-group col-md-6">
          <label for="update-email">Update-Email</label>
          <input type="email" class="form-control" id="update-email" placeholder="" value="youremail@email.com">
        </div>

      </div>

      <div class="form-row">

        <div class="form-group col-md-6">
          <label for="create-username">Update-Username</label>
          <input type="text" class="form-control" id="create-username" placeholder="Your Username" autocomplete="username">
        </div>

        <div class="form-group col-md-3">
          <label for="current-password">Current-Password</label>
          <input type="password" class="form-control" id="current-password" placeholder="Your Password" autocomplete="current-password">
        </div>

        <div class="form-group col-md-3">
          <label for="create-password">Update-Password</label>
          <input type="password" class="form-control" id="create-password" placeholder="Password" autocomplete="new-password">
          <small id="create-password-help" class="text-muted">REQUIREMENTS FOR PASSWORD HERE</small>
        </div>

      </div>

      <div class="form-row">
        <div class="form-group col-12">
          <label for="update-address">Update-Address</label>
          <input type="text" class="form-control" id="update-address" placeholder="1234 Main St" autocomplete="street-address">
        </div>

      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="update-city">Update-City</label>
          <input type="text" class="form-control" id="update-city" placeholder="Enter your City: (Cleveland)">
        </div>

        <div class="form-group col-md-3">
          <label for="update-user-state">Update-State</label>
          <select id="update-user-state" class="form-control">
            <option selected disabled>Choose...</option>
            {{>statedropdown}}
            {{!-- OH is just example, will need to store array of states to send back as valid inputs on page load in the states file or hard code all the states here/in partial --}}
            {{!-- {{#each state}} --}}
          </select>
        </div>

        <div class="form-group col-md-3">
          <label for="update-zipcode">Update-Zipcode:</label>
          <input type="text" class="form-control" id="update-zipcode" autocomplete="postal-code" placeholder="12345">
        </div>
      </div>
      {{!-- End of form  --}}
      <button id="create-new-account" type="submit" class="btn btn-primary">Update Account</button>
  </form>
</div>