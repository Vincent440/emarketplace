<form>
  {{!-- ACCOUNT UPDATE PAGE WITH form.js Linked in script called from account.handlbars if the user is currently logged in --}}
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="create-username">Username</label>
      <input readonly disabled type="text" class="form-control" id="update-username" value="{{username}}">
    </div>
    <div class="form-group col-md-6">
      <label for="update-email">Edit-Email</label>
      <input type="email" class="form-control" id="update-email" value="{{email}}" autocomplete="email">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="update-password">New-Password</label>
      <input type="password" class="form-control" id="update-password" placeholder="New Password" autocomplete="new-password">
      <small id="update-pw-help" class="text-muted">Password must be over at least 6 characters</small>
    </div>
    <div class="form-group col-md-6">
      <label for="verify-update-password">Verify new password</label>
      <input type="password" class="form-control" id="verify-update-password" placeholder="Verify new password" autocomplete="new-password">
      <small id="verify-update-pw-help" class="text-muted">Passwords Must Match</small>
    </div>
  </div>
  <div id="account_error" class="alert alert-warning font-weight-bolder text-center invisible text-break" role="alert"></div>
  <div id="account_success" class="alert alert-success font-weight-bolder text-center invisible text-break" role="alert"></div>
  <button id="update-account" type="submit" class="btn btn-primary">Edit Account <i class="ml-3 fas fa-users-cog"></i></button>
</form>