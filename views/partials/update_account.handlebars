<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="create-username">Edit-Username</label>
      <input type="text" class="form-control" id="create-username" value="{{username}}" autocomplete="username">
    </div>
    <div class="form-group col-md-6">
      <label for="update-email">Edit-Email</label>
      <input type="email" class="form-control" id="update-email" value="{{email}}" autocomplete="email">
    </div>

  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="current-password">Current-Password</label>
      <input type="password" class="form-control" id="current-password" placeholder="*******" autocomplete="current-password">
    </div>
    <div class="form-group col-md-6">
      <label for="update-password">New-Password</label>
      <input type="password" class="form-control" id="update-password" placeholder="New Password" autocomplete="new-password">
      <small id="update-password-help" class="text-muted">Password must be...</small>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="update-name">Edit-Full Name</label>
      <input type="text" class="form-control" id="update-name" value="{{full_name}}" autocomplete="name">
    </div>
    <div class="form-group col-md-6">
      <label for="update-address">Edit-Address</label>
      <input type="text" class="form-control" id="update-address" value="{{address}}" autocomplete="street-address">
    </div>
  </div>

  <div class="form-row">

    <div class="form-group col-md-6">
      <label for="update-city">Edit-City</label>
      <input type="text" class="form-control" id="update-city" value="{{city}}">
    </div>

    <div class="form-group col-6 col-md-2">
      <label for="update-user-state">Update-State</label>
      <select id="update-user-state" class="form-control state-options">
        {{#if state}}
          <option selected disabled>{{state}}</option>
        {{else}}
          <option selected disabled>Choose...</option>
        {{/if}}
          {{!-- JS will append the state options from form.js --}}
      </select>
    </div>

    <div class="form-group col-6 col-md-4">
      <label for="update-zipcode">Edit-Zipcode:</label>
      <input type="text" class="form-control" id="update-zipcode" autocomplete="postal-code" value="{{zip_code}}">
    </div>

  </div>
  {{!-- End of form  --}}
  <button id="update-account" type="submit" class="btn btn-primary">Edit Account <i class="ml-3 fas fa-users-cog"></i></button>
</form>